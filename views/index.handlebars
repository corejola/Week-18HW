<div class="container" id="wrapper">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand custom-text" href="/">Thrasher Magazine Scraper</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/scrape">Scrape </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/articles">Articles </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/saved">Saved Articles</a>
                    {{!-- routing to show the articles saved. --}}
                </li>
            </ul>
        </div>
    </nav>


    <div class="jumbotron">


    </div>

    {{!-- Scraped Articles Section --}}

    <div id="articles">
        <ul>
            {{#each article}}
            <li class="text-area">
                <p>Article Title: {{title}}</p>
                <p><a href="{{link}}" target="_blank">Link to Article</a></p>
                <button type="button" class="btn btn-success">Save Article</button>
            </li>
            {{/each}}
        </ul>
    </div>

    <div id="notes"></div>

</div>